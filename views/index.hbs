<h3>List users</h3>

<div id='card'>
	{{#if users.length}}
		<table>
			<thead>
				<tr>
					<th>Название</th>
					<th>Количество</th>
					<th>Действия</th>
				</tr>
			</thead>
			<tbody>

				{{#each users}}
					<tr>
						<td>{{title}}</td>
						<td>{{count}}</td>
						<td>
							<button
								class='btn btm-small js-remove'
								data-id='{{id}}'
							>Удалить</button>
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>

	{{else}}
		<p>No users</p>
	{{/if}}
</div>